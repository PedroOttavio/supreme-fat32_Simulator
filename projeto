private void leFat() throws IOException {
    byte[] bloco = disco.read(BLOCO_FAT);
    ByteBuffer buffer = ByteBuffer.wrap(bloco);
    for (int i = 0; i < fat.length; i++) {
        fat[i] = buffer.getInt();
    }
}
